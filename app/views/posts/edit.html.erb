<% flash.each do |name, msg| %>
  <%= msg %>
<% end %>

<h1>Edit Post</h1>

<% if @post.errors.any? %>
  <ul>
    <% @post.errors.full_messages.each do |error| %>
      <li><%= error %></li> 
    <% end %>
  </ul>
<% end %>

<%= form_for(@post) do |f| %>
  <div>
    <%= f.label(:title) %>
    <%= f.text_field(:title) %>
  </div>

  <div>
    <%= f.label(:content) %>
    <%= f.text_area(:content) %>
  </div>

  <%= f.submit 'Save' %>
<% end %>

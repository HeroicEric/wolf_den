<% provide(:title, 'Sign up') %>
<h1> Sign Up Mafias</h1>

<div class="row">
  <div class="span6, offset3">
    <%= form_for(@user) do |f| %>
      <% if @user.errors.any? %>
        <ul>
          <% @user.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      <% end %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create my account", class: "button success" %>
    <% end %>
  </div>
</div>
